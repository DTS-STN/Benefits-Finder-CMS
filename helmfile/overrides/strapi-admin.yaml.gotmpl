image:
  repository: mtscontainers.azurecr.io/bf-cms-strapi-admin
{{ if or (eq .Environment.Name "prod-blue") (eq .Environment.Name "prod-green") (eq .Environment.Name "dev") }}
  tag: "{{ requiredEnv "DOCKER_TAG" }}"
{{ else }}
  tag: latest
{{ end }}
  pullPolicy: Always

ingress:
  enabled: true
  hosts:
  {{ if or (eq .Environment.Name "prod-blue") (eq .Environment.Name "prod-green") }}
    - bf-cms-strapi.{{ requiredEnv "BASE_DOMAIN" }}
    - bf-cms-strapi.{{ .Environment.Name }}.{{ requiredEnv "BASE_DOMAIN" }}
  {{ else }}
    - bf-cms-strapi-{{ .Environment.Name }}.{{ requiredEnv "BASE_DOMAIN_DEV" }}
  {{ end }}

resources:
  requests:
    cpu: 200m
    memory: 512Mi

livenessProbe:
  enabled: false
  delay: 60
  path: "{{ requiredEnv "STRAPI_API_BACKEND_URL" }}"

readinessProbe:
  enabled: false
  delay: 30
  path: "{{ requiredEnv "STRAPI_API_BACKEND_URL" }}"

port: 80